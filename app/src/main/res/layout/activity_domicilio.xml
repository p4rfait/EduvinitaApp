<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DomicilioActivity">

    <!-- HEADER SUPERIOR -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#5E3023"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/eduvinita" />

        <View
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="10dp"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/btnCart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_cart"
            android:padding="6dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrega a Domicilio"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#5E3023"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:background="#F5F5F5"
                android:padding="4dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDomicilioActive"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#456D66"
                    android:text="A DOMICILIO"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnRecogerInactive"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D9C2A7"
                    android:text="RECOGER EN TIENDA"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:onClick="goToRecogerTienda" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tu dirección de entrega:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calle *"
                android:backgroundTint="#B68B57"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número De Casa *"
                android:inputType="number"
                android:backgroundTint="#B68B57"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etColonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Colonia *"
                android:backgroundTint="#B68B57"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad *"
                android:backgroundTint="#B68B57"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etReferencias"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Referencias adicionales"
                android:gravity="top"
                android:backgroundTint="#B68B57"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnConfirmarDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar Dirección"
                android:backgroundTint="#3E6B63"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#5E3023"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/navMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_menu"
                app:tint="@android:color/white"/>
            <TextView
                android:text="Menú"
                android:textColor="@android:color/white"
                android:textSize="12sp" android:layout_height="1dp" android:layout_width="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navFavoritos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_favorite"
                app:tint="@android:color/white"/>
            <TextView
                android:text="Favoritos"
                android:textColor="@android:color/white"
                android:textSize="12sp" android:layout_height="1dp" android:layout_width="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_profile"
                app:tint="@android:color/white"/>
            <TextView
                android:text="Perfil"
                android:textColor="@android:color/white"
                android:textSize="12sp" android:layout_height="1dp" android:layout_width="1dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>