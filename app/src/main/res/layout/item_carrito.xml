<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgCarritoPlato"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Imagen del producto"
            android:background="@drawable/eduvinita" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvCarritoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CafÃ© Americano"
                android:textStyle="bold"
                android:textColor="#4E342E"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvCarritoPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2.50"
                android:textSize="15sp"
                android:textColor="#3E6B63"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:backgroundTint="#B73E3E"
            app:cornerRadius="20dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Eliminar del carrito" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
